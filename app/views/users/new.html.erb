<h1>sign Up</h1>

<%= form_for @user do |f| %>
 <% if @user.errors.any? %>
  <div class="error_messages">
   <h2>Form is invalid</h2>
   <ul>
     <% for msg in @user.errors.full_messages %>
       <li><%= msg %></li>
     <% end %>
   </ul>
  </div>
 <% end %>

 <p>
   <%= f.label :name%><br />
   <%= f.text_field :name%>
 </p>

  <p class="button"><%= f.submit%></p>
<% end %>
